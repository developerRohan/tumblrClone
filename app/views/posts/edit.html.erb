<div id="page_wrapper">
<h1>post something</h1>

<%= form_for @post do |post| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2>
				<%= pluralize(@post.errors.count , "error")%> stopped this from saving
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</h2>
	<p>
		<%= post.label :title%>
		<%= post.text_field :title%>

	</p>
	<p>
		<%= post.label :body%>
		<%= post.text_area :body%>
	</p>
	<p>
		<%= post.submit%>
	</p>

<% end %> 
</div>